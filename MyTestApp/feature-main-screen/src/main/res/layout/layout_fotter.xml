<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/fotterContainer"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginTop="22dp"
    android:background="@drawable/shape_rectangle_rounded_top_20dp"
    app:layout_constraintTop_toBottomOf="@id/bestSellerRecyclerView">

    <LinearLayout
        android:id="@+id/fotterExplorerContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fotter_cart_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/fotterDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_sircle_dot"
            app:tint="?attr/colorOnSecondary" />

        <TextView
            android:id="@+id/fotterExplorrer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:text="@string/explorer"
            android:textAppearance="@style/Headline6"
            android:textColor="?attr/colorOnSecondary" />

    </LinearLayout>


    <ImageButton
        android:id="@+id/fotter_cart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_footer_bag"
        app:layout_constraintBottom_toBottomOf="@+id/fotterExplorerContainer"
        app:layout_constraintEnd_toStartOf="@+id/fotterHeartButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fotterExplorerContainer"
        app:layout_constraintTop_toTopOf="@+id/fotterExplorerContainer" />

    <TextView
        android:text="2"
        android:visibility="visible"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="10sp"
        android:id="@+id/countOfCartTextView"
        android:layout_width="12dp"
        android:textAlignment="center"
        android:padding="0dp"

        android:background="@drawable/shape_circle"
        android:backgroundTint="?attr/colorSecondary"
        android:layout_marginBottom="-5dp"
        android:layout_marginEnd="-5dp"
        android:layout_height="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/fotter_cart_button"
        app:layout_constraintEnd_toEndOf="@+id/fotter_cart_button" />

    <ImageButton
        android:id="@+id/fotterHeartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_fotter_heart"
        app:layout_constraintBottom_toBottomOf="@+id/fotterExplorerContainer"
        app:layout_constraintEnd_toStartOf="@+id/fotterAccountButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fotter_cart_button"
        app:layout_constraintTop_toTopOf="@+id/fotterExplorerContainer" />

    <ImageButton
        android:id="@+id/fotterAccountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="68dp"
        android:background="@null"
        android:src="@drawable/ic_fotter_account"
        app:layout_constraintBottom_toBottomOf="@+id/fotterExplorerContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fotterHeartButton"
        app:layout_constraintTop_toTopOf="@+id/fotterExplorerContainer" />


</androidx.constraintlayout.widget.ConstraintLayout>
</merge>